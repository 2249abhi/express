{{>header}}
<title>CRUD APP | Home</title>
{{>navbar}}
<div class="container-fluid mid-section">
    <h5 class="background text-center p-2 text-light mt-1">Add Employee Record</h5>
    <form action="/add" method="post">
        <div class="row">
            <div class="form-group col-md-12">
                <label for="inputEmail4">Full Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Full Name">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Email</label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Phone</label>
                <input type="text" class="form-control" name="phone" maxlength="10" id="phone" placeholder="Phone">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Designation</label>
                <input type="text" class="form-control" name="dsg" id="dsg" placeholder="Designation">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Salary</label>
                <input type="text" class="form-control" name="salary" id="salary" placeholder="Salary">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">City</label>
                <input type="text" class="form-control" name="city" id="city" placeholder="City">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">State</label>
                <input type="text" class="form-control" name="state" id="state" placeholder="state">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
{{>footer}}